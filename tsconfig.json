{
  "include": ["src/ts/**/*", "scripts/**/*", "webpack.config.js"],
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES2015",
    "module": "ES2015",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodenext"
  }
}
